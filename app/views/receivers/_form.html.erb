<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_for(@receiver) do |f| %>
      <% if @receiver.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@receiver.errors.count, "error") %> prohibited this receiver from being saved:</h2>
    
          <ul>
          <% @receiver.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    
      <div class="form-inputs">
        <div class="row">
          <div class="col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3 well">
            <%= f.text_field :name, placeholder: "接收單位名稱", class: "form-control" %>
            <br>
            <%= f.text_field :contact, placeholder: "連絡人姓名", class: "form-control" %>
            <br>
            <%= f.text_field :phone, placeholder: "連絡電話", class: "form-control" %>
            <br>
            <%= f.text_area :comment, placeholder: "請簡述該單位", class: "form-control" %>
          </div>
        </div>
      </div>
      
      <div class="form-actions">
        <div class="row">
          <div class="col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3 text-center">
            <%= f.submit @submit, class: "btn btn-primary btn-embossed" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

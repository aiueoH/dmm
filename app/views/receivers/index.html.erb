<div class="col-md-8 col-md-offset-2">
  <% if !@receivers.empty? %>
  <div class="well">
    <!-- index list -->
    <table class="table table-hover table-ezr" >
      <thead>
          <tr>
            <th>接收單位</th>
            <th class="th-erz">聯絡人</th>
            <th class="th-erz">電話</th>
            <th class="th-erz">備註</th>
            <% if user_signed_in? %>
              <th></th>
            <% end %>
          </tr>
      </thead>
      <tbody>
        <% @receivers.each do |receiver| %>
          <tr>
            <td><%= link_to receiver.name, receiver %></td>
            <td class="td-erz"><%= receiver.contact %></td>
            <td class="td-erz"><%= receiver.phone %></td>
            <td class="td-erz"><%= receiver.comment %></td>
            <% if user_signed_in? %>
              <td class="text-right">
                <%= link_to edit_receiver_path(receiver), class: "btn btn-sm btn-embossed btn-inverse" do %>
                  <i class="glyphicon glyphicon-edit"></i>
                <% end %>
                <%= link_to receiver, method: :delete, class: "btn btn-sm btn-embossed btn-danger", data: { confirm: '確定要刪除嗎？' } do %>
                  <i class="glyphicon glyphicon-trash"></i>
                <% end %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <% else %>
  <div class="well well-empty text-center">目前沒有<span>接收單位</span>，新增一筆？</div>
  <% end %>
  <!-- Create User Button -->
  <% if user_signed_in? %>
    <%= float_add_btn new_receiver_path %>
  <% end %>
</div>


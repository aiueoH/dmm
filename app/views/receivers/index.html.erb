<p id="notice"><%= notice %></p>

<h1>Listing Receivers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Contact</th>
      <th>Phone</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receivers.each do |receiver| %>
      <tr>
        <td><%= receiver.name %></td>
        <td><%= receiver.contact %></td>
        <td><%= receiver.phone %></td>
        <td><%= receiver.comment %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Show', receiver %></td>
          <td><%= link_to 'Edit', edit_receiver_path(receiver) %></td>
          <td><%= link_to 'Destroy', receiver, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Receiver', new_receiver_path %>
<% end %>

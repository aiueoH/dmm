<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">
    <div class="well">
      <h3><%= @receiver.name %></h3>
      <hr>
      <div class="text-left">
        <span><i class="fa fa-user"></i> 聯絡人　：  </span><strong><%= @receiver.contact.empty? ? "無" : @receiver.contact %></strong><br>
        <span><i class="fa fa-phone"></i> 聯絡電話：  </span><strong><%= @receiver.phone.empty? ? "無" : @receiver.phone %></strong>
      </div>
      <hr>
      <%= @receiver.comment.empty? ? "無" : @receiver.comment %>
    </div>
    <%= link_to '返回列表', receivers_path, class: "btn btn-embossed btn-inverse btn-float" %>
  </div>
</div>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <% if @receiver.orders.empty? %>
      <div class="well well-empty text-center">目前<span>沒有</span>分配紀錄</div>
    <% else %>
      <div class="well">
        <table class="table table-hover table-ezr" >
          <thead>
              <tr>
                <th>獲得物資</th>
                <th class="th-ezr">數量</th>
              </tr>
          </thead>
          <tbody>
            <% @receiver.orders.each do |order| %>
              <tr>
                <td><%= link_to order.item.name, order.item %></td>
                <td class="td-ezr"><%= order.amount %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
</div>

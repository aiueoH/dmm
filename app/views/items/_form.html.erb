<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_for(@item) do |f| %>
    
      <div class="form-inputs">
        <div class="row">
          <div class="col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3 well">
            <%= dmm_input(f, "text", "物資名稱", :name, "請輸入物資名稱(含單位)" ) %>
            <% if @item.errors.any? %>
              <% @item.errors.messages[:name].each do |message| %>
                <div class="has-error">
                  <i class="fa fa-times-circle"></i>
                  <%= message %>
                </div>
              <% end %>
            <% end %>
            <br>
            <%= dmm_input(f, "number", "物資數量", :amount, "請輸入物資數量" ) %>
            <br>
            <%= dmm_input(f, "number", "安全庫存", :safety_stock, "安全數量" ) %>
          </div>
        </div>
      </div>
      
      <div class="form-actions">
        <div class="row">
          <div class="col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3 text-center">
            <%= f.submit @submit, class: "btn btn-primary btn-embossed" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
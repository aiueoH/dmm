<div class="col-md-8 col-md-offset-2">
  <% if !@items.empty? %>
  <div class="well">
    <!-- index list -->
    <table class="table table-hover table-ezr" >
      <thead>
          <tr>
            <th>物資名稱</th>
            <th class="th-erz">數量</th>
            <th class="th-erz">安全量</th>
            <% if user_signed_in? %>
              <th></th>
            <% end %>
          </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= link_to item.name, item %></td>
            <td class="td-erz"><%= item.amount %></td>
            <td class="td-erz"><%= item.safety_stock %></td>
            <% if user_signed_in? %>
              <td class="text-right">
                <%= link_to edit_item_path(item), class: "btn btn-sm btn-embossed btn-inverse" do %>
                  <i class="glyphicon glyphicon-edit"></i>
                <% end %>
                <%= link_to item, method: :delete, class: "btn btn-sm btn-embossed btn-danger", data: { confirm: '確定要刪除嗎？' } do %>
                  <i class="glyphicon glyphicon-trash"></i>
                <% end %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <% else %>
  <div class="well well-empty text-center">目前沒有<span>物資項目</span>，新增一筆？</div>
  <% end %>
  <div class="badge float-total">共 <%= @items.count %> 筆資料</div>
  <!-- Create User Button -->
  <% if user_signed_in? %>
    <%= float_add_btn new_item_path %>
  <% end %>
</div>

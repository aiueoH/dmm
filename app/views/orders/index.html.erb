<div class="col-md-8 col-md-offset-2">
  <% if !@orders.empty? %>
  <div class="well">
    <!-- index list -->
    <table class="table table-hover table-ezr" >
      <thead>
          <tr>
            <th>接收單位</th>
            <th class="th-erz">名稱</th>
            <th class="th-erz">數量</th>
            <th class="th-erz">備註</th>
            <% if user_signed_in? %>
              <th></th>
            <% end %>
          </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= receiver_name(order.receiver_id) %></td>
            <td class="td-erz"><%= item_name(order.item_id) %></td>
            <td class="td-erz"><%= order.amount %></td>
            <td class="td-erz"><%= link_to order.comment, order %></td>
            <% if user_signed_in? %>
              <td class="text-right">
                <%= link_to order, method: :delete, class: "btn btn-sm btn-embossed btn-danger", data: { confirm: '確定要刪除嗎？' } do %>
                  <i class="glyphicon glyphicon-trash"></i>
                <% end %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <% else %>
  <div class="well well-empty text-center">目前沒有<span>分配紀錄</span>，新增一筆？</div>
  <% end %>
  <!-- Create User Button -->
  <% if user_signed_in? %>
    <div class="text-center">
      <%= float_add_btn new_order_path %>
    </div>
  <% end %>
</div>
